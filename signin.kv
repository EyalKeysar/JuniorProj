
WindowManager:
    MainWindow:
    LogInWindow:
    SignUpWindow:


<MainWindow>:
    connection_status_bar: connection_status_bar
    name: "main"
    GridLayout:
        size: root.width, root.height
        cols: 1

        Label:
            id: connection_status_bar
            text: "Connection Status"
            font_size: 30
            background_color: (1, 0, 0, 1)
            size_hint_y: 0.2
            color: (1, 1, 1, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    pos: self.pos
                    size: self.size

        Label:
            text: "Main Window"
            font_size: 30

        Button:
            text: "Sign Up"
            on_press: 
                root.manager.current = "sign_up"
                root.manager.transition.direction = "left"
            

        Button:
            text: "Log In"
            on_press: 
                root.manager.current = "log_in"
                root.manager.transition.direction = "left"

<LogInWindow>:
    name: "log_in"
    GridLayout:
        size: root.width, root.height
        cols: 1

        Label:
            text: "Log In Window"
            font_size: 30
        Button:
            text: "Go Back"
            on_press: 
                root.manager.current = "main"
                root.manager.transition.direction = "right"

<SignUpWindow>:
    name: "sign_up"
    GridLayout:
        size: root.width, root.height
        cols: 1
        
        Label:
            text: "Sign Up Window"
            font_size: 30
        Button:
            text: "Go Back"
            on_press: 
                root.manager.current = "main"
                root.manager.transition.direction = "right"
